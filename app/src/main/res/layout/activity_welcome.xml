<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            style="@style/AllCard"

            android:id="@+id/welcome_card_inner"
            android:clickable="false"
            android:focusable="true"
            android:checkable="true"
            android:layout_width="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="0.8"
            app:strokeWidth="0dp"
            app:cardElevation="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="202dp"
                    android:layout_height="179dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="200dp"
                    app:srcCompat="@drawable/icon" />

                <TextView
                    android:id="@+id/welcome_msg"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="150dp"
                    android:text="@string/welcome_title"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_subtitle"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90dp"
                    android:textSize="20dp"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/radioGroup"
            android:checkedButton="@+id/control_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="0px">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot1"
                android:layout_width="11dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot2"
                android:layout_width="11dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/dotDisable"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot3"
                android:layout_width="11dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/dotDisable"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot4"
                android:layout_width="11dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/dotDisable"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot5"
                android:layout_width="11dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/dotDisable"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot6"
                android:layout_width="11dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/dotDisable"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot7"
                android:layout_width="11dp"
                android:layout_height="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/dotDisable"
                app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/welcomeButton"
            android:id="@+id/welcome_button"
            android:elevation="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="0.1"
            android:text="@string/welcome_btn"
            android:textColor="@color/white"
            app:backgroundTint="@color/colorButton"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>